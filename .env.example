# MODNet service configuration
MODNET_MODEL_PATH=/models/modnet_portrait.ckpt
MODNET_MAX_LONG_EDGE=1024
MODNET_MAX_LONG_EDGE_HIGH_QUALITY=1536
DEFAULT_QUALITY_MODE=standard

# Cloudflare R2 / S3-compatible storage
R2_ENDPOINT=https://<accountid>.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-key
R2_SECRET_ACCESS_KEY=your-secret
R2_BUCKET_NAME=modnet-cutouts
R2_PUBLIC_BASE_URL=https://pub.example.com
R2_API_TOKEN=token-here

# API
REQUEST_TIMEOUT_SECONDS=30
LOG_LEVEL=INFO

# Post-processing knobs
EDGE_SMOOTH_BLEND=0.55
EDGE_BAND_LOW=0.08
EDGE_BAND_HIGH=0.92
BILATERAL_SIGMA_COLOR=28
ALPHA_BAND_PULL=0.015
DEFRINGE_BLEND=0.35
POSTPROC_MODE=portrait  # portrait | dress | product use presets, custom uses env values
ALPHA_HIGH_CLIP=0.995
CC_KEEP_THRESHOLD=0.05

# Debugging (set to 1 to write alpha/band debug images)
DEBUG=0
DEBUG_OUTPUT_DIR=/tmp/bgremover_debug
